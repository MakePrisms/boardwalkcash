{
   "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "paths": {
         "@/*": ["./src/*"]
      }
   },
   "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "global.d.ts", "bolt11-decoder.d.ts"],
   "exclude": ["node_modules"]
}
